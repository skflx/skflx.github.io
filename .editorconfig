# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# HTML files
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 2

# JavaScript files
[*.js]
indent_size = 4

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Python files
[*.py]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2
